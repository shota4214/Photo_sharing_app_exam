<!-- Page Header-->
<header class="masthead" style="background-image: url(<%= asset_path 'confirm.jpg' %>)">
  <div class="container position-relative px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
          <div class="page-heading">
            <h1>PicChum投稿確認</h1>
          <span class="subheading">〜Picture（写真）を通してChum（仲良し）になれますに〜</span><br>
          </div>
      </div>
    </div>
  </div>
</header>
<!-- Main Content-->
<main class="mb-4">
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <h3>PicChumに投稿する内容は下記で良いですか？</h3>
        <%= form_with(model: @picture, local: true) do |form| %>
          <%= form.hidden_field :picture_image %>
          <%= form.hidden_field :content %>
          <p>写真</p>
          <%= image_tag(@picture.picture_image.url) if @picture.picture_image && @picture.picture_image.url %>
          <%= form.hidden_field :picture_image_cache %>
          <p>内容</p>
          <%= @picture.content %><br>
          <%= form.submit  "push" %>
        <% end %>
        <%= form_with(model: @picture, local: true, url: new_picture_path, method: "get") do |form| %>
          <%= form.hidden_field :picture_image_cache %>
          <%= form.hidden_field :content %>
          <%= form.submit "back", name: "back" %>
        <% end %>
      </div>
    </div>
  </div>
</main>