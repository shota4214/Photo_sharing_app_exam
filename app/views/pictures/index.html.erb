<!-- Page Header-->
<header class="masthead" style="background-image: url(<%= asset_path 'picture_index.jpg'%>)">
  <div class="container position-relative px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="site-heading">
          <h1>PicChum一覧</h1>
          <span class="subheading">〜Picture（写真）を通してChum（仲良し）になれますに〜</span><br>
          <h1></h1>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- Main Content-->
<div class="container px-4 px-lg-5">
  <div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
      <%= link_to "New PicChum", new_picture_path, class: "btn btn-primary" %>新規PicChum投稿<br>
      <br>
      <% @pictures.each do |picture| %>
      <!-- Post preview-->
        <div class="post-preview">
        <tr>
          <td><h2 class="post-title"><%= image_tag picture.photo.url, width: '20%', height: '20%' %></h2></td>
          <td><h3 class="post-subtitle"><%= picture.content %></h3></td>
          <td><h3 class="post-meta"><%= picture.user.name %></h3></td>
          <td><p class="post-meta"><%= time_ago_in_words(picture.created_at) %></p></td>
          <% if picture.user == current_user %>
            <td><%= link_to '詳細', picture, class: "btn btn-outline-info" %></td>
            <td><%= link_to '編集', edit_picture_path(picture), class: "btn btn-outline-warning" %></td>
            <td><%= link_to '削除', picture, method: :delete, data: { confirm: '本当に削除してもですか?' }, class: "btn btn-outline-danger" %></td>
          <% else %>
            <td><%= link_to '詳細', picture, class: "btn btn-outline-info" %></td>
          <% end %>
        </tr>
        </div>
        <!-- Divider-->
        <hr class="my-4" />
      <% end %>
    </div>
  </div>
</div>